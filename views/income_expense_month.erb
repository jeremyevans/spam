<% @pagetitle = "Income/Expense Entries for #{@year}-#{"%02i" % @month}" %>

<div class="row">
  <div class="col-md-4">
    <table class="table table-condensed table-bordered">
    <thead><tr><th>Date</th><th>Entity</th><th>Debit Account</th><th>Credit Account</th><th>Amount</th></tr></thead>
    <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.date %></td>
        <td><%= entry.entity.name %></td>
        <td><%= entry.debit_account.name %></td>
        <td><%= entry.credit_account.name %></td>
        <td class="money"><%= entry.amount.to_money %></td>
      </tr>
    <% end%>
    </tbody></table>
  </div>
</div>

